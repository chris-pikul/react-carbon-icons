{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "baseUrl": ".",
    "rootDirs": ["src", "gen"],

    "outDir": "build",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["./src/*", "./gen/*"],
  "exclude": ["node_modules", ".yarn"]
}
